                                    <input type="checkbox" id="@subject.Subject">
                                    <label for="@subject.Subject">@subject.Subject  (@subject.Count)</label>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="filter-group">
                        <h3>Khoảng Giá</h3>
                        <div class="price-slider">
                            <input type="range" min="0" max="2000000" value="1000000" class="slider" id="priceRange">
                            <div class="price-range-labels">
                                <span>0đ</span>
                                <span>2.000.000đ+</span>
                            </div>
                        </div>
                    </div>


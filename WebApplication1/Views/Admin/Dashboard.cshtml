@model WebApplication1.ViewModel.AdminDashboardVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard Admin";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@300;400;700;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

<style>
    /* --- Cài đặt chung --- */
    :root {
        --font-family-base: 'Nunito Sans', sans-serif;
        --background-color: #f4f7fc;
        --card-shadow: 0 4px 15px rgba(0, 0, 0, 0.07);
        --card-hover-shadow: 0 6px 20px rgba(0, 0, 0, 0.12);
    }

    .dashboard-page {
        font-family: var(--font-family-base);
        padding-bottom: 160px;
    }

    /* --- Bố cục chính --- */
    .dashboard-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .dashboard-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 30px;
        color: #2c3e50;
    }

    /* --- Lưới thẻ (Sử dụng CSS Grid) --- */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px; /* Khoảng cách giữa các thẻ */
    }

    /* --- Thiết kế cho từng thẻ --- */
    .dashboard-card {
        color: white;
        padding: 25px;
        border-radius: 12px;
        box-shadow: var(--card-shadow);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 220px;
    }

    .dashboard-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--card-hover-shadow);
    }

    /* --- Màu sắc cho từng loại thẻ --- */
    .card-courses {
        background: linear-gradient(45deg, #007bff, #0056b3);
    }

    .card-students {
        background: linear-gradient(45deg, #28a745, #1c7430);
    }

    .card-teachers {
        background: linear-gradient(45deg, #ffc107, #d39e00);
    }

    /* --- Các phần tử bên trong thẻ --- */
    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 700;
    }

    .card-icon {
        font-size: 1.8rem;
        opacity: 0.7;
    }

    .card-number {
        font-size: 3.5rem;
        font-weight: 900;
        text-align: left;
        margin: 10px 0;
    }

    .card-link {
        display: inline-block;
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 700;
        align-self: flex-start;
        transition: background-color 0.2s ease;
    }

    .card-link:hover {
        background-color: rgba(255, 255, 255, 0.35);
    }
</style>

<div class="dashboard-page">
    <div class="dashboard-container">
        <h2 class="dashboard-title">📊 Thống kê hệ thống</h2>

        <div class="dashboard-grid">
            <div class="dashboard-card card-courses">
                <div class="card-header">
                    <h3 class="card-title">Khóa học</h3>
                    <div class="card-icon"><i class="fas fa-book-open"></i></div>
                </div>
                <p class="card-number">@Model.SoLuongKhoaHoc</p>
                <a asp-action="Index" asp-controller="KhoaHocs" class="card-link">Xem danh sách</a>
            </div>

            <div class="dashboard-card card-students">
                <div class="card-header">
                    <h3 class="card-title">Học viên</h3>
                    <div class="card-icon"><i class="fas fa-user-graduate"></i></div>
                </div>
                <p class="card-number">@Model.SoLuongHocVien</p>
                <a asp-action="Index" asp-controller="HocSinh" class="card-link">Xem danh sách</a>
            </div>

            <div class="dashboard-card card-teachers">
                <div class="card-header">
                    <h3 class="card-title">Giáo viên</h3>
                    <div class="card-icon"><i class="fas fa-chalkboard-teacher"></i></div>
                </div>
                <p class="card-number">@Model.SoLuongGiaoVien</p>
                <a asp-action="Index" asp-controller="GiaoViens" class="card-link">Xem danh sách</a>
            </div>
        </div>
    </div>
</div>
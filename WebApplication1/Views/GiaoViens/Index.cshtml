@model IEnumerable<WebApplication1.Models.GiaoVien>
@{

    ViewData["Title"] = "Dashboard Giáo viên";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #f7f7f7;
    }

    h2 {
        font-weight: bold;
    }

    .btn {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 6px;
    }

        .btn i {
            margin-right: 8px;
        }

    .dashboard-container {
        display: flex;
        gap: 20px;
        margin-bottom: 40px;
    }

    .card {
        flex: 1;
        background-color: white;
        padding: 20px;
        border-left: 5px solid #007bff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        transition: 0.3s ease;
        text-align: center;
    }

        .card:hover {
            transform: translateY(-4px);
        }

        .card i {
            font-size: 32px;
            margin-bottom: 10px;
        }

    .profile-img {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ddd;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: white;
    }

    th, td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ccc;
    }

    th {
        background-color: #eee;
    }

    .actions {
        text-align: center;
    }

        .actions a {
            display: inline-block;
            margin: 0 5px;
            padding: 6px 10px;
            border: 1px solid #aaa;
            border-radius: 4px;
            color: #333;
            text-decoration: none;
        }

    .no-data {
        text-align: center;
        padding: 60px;
        background-color: #fff;
        margin-top: 20px;
    }

        .no-data i {
            font-size: 50px;
            color: #ccc;
        }

        .no-data h4 {
            color: #666;
        }

        .no-data p {
            color: #999;
        }

    .topbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }
</style>

<div class="topbar">
    <h2>@ViewData["Title"]</h2>
    <a class="btn" href="@Url.Action("Create", "GiaoViens", new { area = "Admin" })">
        <i class="fas fa-user-plus"></i> Thêm giáo viên
    </a>
</div>

<div class="dashboard-container">
    <div class="card" style="border-color:#007bff;">
        <i class="fas fa-chalkboard-teacher" style="color:#007bff;"></i>
        <h3>@ViewData["TotalTeachers"]</h3>
        <small>Tổng giáo viên</small>
    </div>
    <div class="card" style="border-color:#28a745;">
        <i class="fas fa-user-check" style="color:#28a745;"></i>
        <h3>0</h3>
        <small>Đang hoạt động</small>
    </div>
    <div class="card" style="border-color:#ffc107;">
        <i class="fas fa-user-clock" style="color:#ffc107;"></i>
        <h3>0</h3>
        <small>Chờ duyệt / Nghỉ phép</small>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Họ tên</th>
                <th>Liên hệ</th>
                <th>Giới thiệu</th>
                <th class="actions">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.DuongDanAnhDaiDien))
                        {
                            <img src="@item.DuongDanAnhDaiDien" class="profile-img" alt="Ảnh @item.HoTen" />
                        }
                        else
                        {
                            <i class="fas fa-user-circle fa-2x text-muted"></i>
                        }
                    </td>
                    <td>
                        <strong>@item.HoTen</strong><br />
                        <small>Mã: @item.MaGiaoVien</small>
                    </td>
                    <td>
                        <div><i class="fas fa-envelope"></i> @item.Email</div>
                        <div><i class="fas fa-phone"></i> @item.DienThoai</div>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.GioiThieu))
                        {
                            @if (item.GioiThieu.Length > 100) // Giới hạn độ dài hiển thị, ví dụ 100 ký tự
                            {
                                @(item.GioiThieu.Substring(0, 100) + "...")
                            }
                            else
                            {
                                @item.GioiThieu
                            }
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td class="actions">
                        <a href="@Url.Action("Edit", "GiaoViens", new { id = item.MaGiaoVien, area = "Admin" })"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Details", "GiaoViens", new { id = item.MaGiaoVien, area = "Admin" })"><i class="fas fa-eye"></i></a>
                        <a href="@Url.Action("Delete", "GiaoViens", new { id = item.MaGiaoVien, area = "Admin" })"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="no-data">
        <i class="fas fa-folder-open"></i>
        <h4>Không có giáo viên nào</h4>
        <a class="btn" href="@Url.Action("Create", "GiaoViens", new { area = "Admin" })">
            <i class="fas fa-plus-circle"></i> Thêm giáo viên
        </a>
    </div>
}


<main class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="auth-header">
                <h1>Tạo Tài Khoản</h1>
                <p>Tham gia cùng hàng ngàn học viên trên EduLearn.</p>
            </div>

            <div class="auth-social">
                <button class="btn btn-social">
                    <i class="fab fa-google"></i>
                    <span>Google</span>
                </button>
                <button class="btn btn-social">
                    <i class="fab fa-facebook-f"></i>
                    <span>Facebook</span>
                </button>
            </div>

            <div class="auth-divider">
                <span>hoặc</span>
            </div>

            <form class="auth-form">
                <div class="form-row">
                    <div class="form-group">
                        <label for="first-name">Họ</label>
                        <input type="text" id="first-name" placeholder="Nhập họ của bạn">
                    </div>
                    <div class="form-group">
                        <label for="last-name">Tên</label>
                        <input type="text" id="last-name" placeholder="Nhập tên của bạn">
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" placeholder="Nhập email của bạn">
                </div>

                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <input type="password" id="password" placeholder="Tạo mật khẩu">
                </div>

                <div class="form-group">
                    <label for="confirm-password">Xác nhận mật khẩu</label>
                    <input type="password" id="confirm-password" placeholder="Xác nhận mật khẩu của bạn">
                </div>

                <div class="form-checkbox">
                    <input type="checkbox" id="terms">
                    <label for="terms">Tôi đồng ý với <a href="terms.html">Điều khoản dịch vụ</a> và <a href="privacy.html">Chính sách quyền riêng tư</a></label>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Đăng Ký</button>
            </form>

            <div class="auth-footer">
                <p>Đã có tài khoản? <a href="login.html">Đăng nhập</a></p>
            </div>
        </div>
    </div>
</main>